[flake8]
# Flake8 configuration

max-complexity = 10

exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    # rm incomplete files
    simulator/elements/base_element.py,
    simulator/elements/controlled_sources.py,
    simulator/elements/diode.py,
    simulator/elements/mosfet.py,
    simulator/elements/nonlinear_resistor.py,
    simulator/elements/opamp.py,
    simulator/elements/sources.py

# error codes to ignore
ignore =
    # whitespace before ':' 
    E203,
    # line break before binary operator
    W503,
    # line break after binary operator
    W504

# specific checks
select = E,W,F,C90

# source code for errors
show-source = True
count = True

# show statistics
statistics = True
